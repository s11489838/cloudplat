<html>
  <head> 
    <title><%= action %></title>
		
		<!--Import Google Icon Font-->
      <link href="//fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link type="text/css" rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css"  media="screen,projection"/>

      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

      <link type="text/css" rel="stylesheet" href="/layout.css" />
    </head>
  </head>
  <body>


<div class="container">
  <div class="row valign-wrapper">
    <div class="col s8 offset-s2 valign">
      <div class="card">
        <div class="card-action teal lighten-2">
          <span class="card-title white-text"><%= action %> Restaurant</span>
        </div>
        <div class="card-content">
          <div class="row">
            <p style="color:red"><%=messages%></p>
            <form class="input-field col s12" 
                method="post" 
                action=<%= orgJson ? "#" : "\/api\/create"  %>
                encType="multipart/form-data">
              <div class="input-field col s12">
                <input id="name" type="text" name="name" class="validate" value="<%= orgJson ? orgJson.name : "" %>">
                <label for="name">Name*</label>
              </div>
              <div class="input-field col s6">
                <input id="borough" type="text" name="borough" class="validate" value="<%= orgJson ? orgJson.borough : "" %>">
                <label for="borough">borough</label>
              </div>
              <div class="input-field col s6">
                <input id="cuisine" type="text" name="cuisine" class="validate" value="<%= orgJson ? orgJson.cuisine : "" %>">
                <label for="cuisine">cuisine</label>
              </div>
              <div class="input-field col s4">
                <input id="street" type="text" name="street" class="validate" value="<%- orgJson ? orgJson.address.street : "" %>">
                <label for="street">street</label>
              </div> 
              <div class="input-field col s4">
                <input id="building" type="text" name="building" class="validate" value="<%= orgJson ? orgJson.address.building : "" %>">
                <label for="building">building</label>
              </div>              
              <div class="input-field col s4">
                <input id="zipcode" type="text" name="zipcode" class="validate" value="<%= orgJson ? orgJson.address.zipcode : "" %>">
                <label for="zipcode">zipcode</label>
              </div>
              <div class="input-field col s6">
                <input id="lat" type="number" step="any" name="lat" class="validate" value="<%= orgJson ? orgJson.address.coord.lat : "" %>">
                <label for="lat">Latitude</label>
              </div>
              <div class="input-field col s6">
                <input id="lon" type="number" step="any" name="lon" class="validate" value="<%= orgJson ? orgJson.address.coord.lon : "" %>">
                <label for="lon">Longitude</label>
              </div>                            
              <div class="file-field input-field col s12">
                <div class="btn">
                  <span>Image</span>
                  <input type="file" name="imgFile">
                </div>
                <div class="file-path-wrapper">
                  <input class="file-path validate" name="filename" type="text" value="<%= orgJson ? orgJson.img.filename : "" %>">
                </div>
                </div>
              </div>
              <input name="oldname" type="hidden" value="<%= orgJson ? orgJson.img.filename : ""%>">          
              <input type="hidden" value="form" name="from" class="validate">
              <div class="center-btn">
                <button class="btn waves-effect waves-light" type="submit" name="action">Save
                  <i class="material-icons right">send</i>
                </button>
                <a class="btn-flat" type="submit" href="/list">Back
                </a>                     
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

			<!--Import jQuery before materialize.js-->
      <script type="text/javascript" src="//code.jquery.com/jquery-2.1.1.min.js"></script>
      <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
    </body>
</html>
